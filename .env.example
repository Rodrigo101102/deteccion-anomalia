# Configuración de ejemplo para variables de entorno
# Copiar a .env y ajustar valores según el entorno

# Django
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de datos
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/anomalia_detection
DB_NAME=anomalia_detection
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# Redis (para Celery)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (opcional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Logging
LOG_LEVEL=INFO

# Captura de tráfico
CAPTURE_INTERFACE=eth0
CAPTURE_DURATION=300
CAPTURE_INTERVAL=20
AUTO_START_CAPTURE=True

# Machine Learning
ML_MODEL_PATH=/media/models/
ML_CONTAMINATION=0.1
ML_RETRAIN_INTERVAL=3600

# Seguridad
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0